<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_slidebar_cardview_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardElevation="3dp">

    <FrameLayout
        android:id="@+id/fragment_slidebar_cardview_subject_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/custom_ripple_button_subject_normal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_slidebar_cardview_subject_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java Programming"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/fragment_slidebar_cardview_subject_text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample description should not be too"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/fragment_slidebar_cardview_subject_button_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ripple_cardview_icon"
                android:clickable="true"
                android:layout_marginRight="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/icon_edit"
                    android:layout_margin="6dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_slidebar_cardview_subject_button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ripple_cardview_icon"
                android:clickable="true">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/icon_delete"
                    android:layout_margin="6dp"/>
            </RelativeLayout>
        </LinearLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>