<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_register_fname_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:theme="@style/AppTheme.Stylex.TIL">

        <EditText
            android:id="@+id/fragment_register_text_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_register_text_firstname"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_register_lname_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_register_fname_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:theme="@style/AppTheme.Stylex.TIL">

        <EditText
            android:id="@+id/fragment_register_text_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_register_text_lastname"
            android:inputType="textPersonName" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_register_email_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_register_lname_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:theme="@style/AppTheme.Stylex.TIL">

        <EditText
            android:id="@+id/fragment_register_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_register_button_email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_register_password_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_register_email_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:theme="@style/AppTheme.Stylex.TIL">

        <EditText
            android:id="@+id/fragment_register_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_register_text_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/fragment_register_button_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_register_password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:height="70dp"
        android:text="@string/fragment_register_button_register"
        android:theme="@style/AppTheme.Base.Button.Normal" />

    <Button
        android:id="@+id/fragment_register_button_cancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_register_button_register"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:height="70dp"
        android:text="@string/fragment_register_button_cancel"
        android:theme="@style/AppTheme.Base.Button.Reverse" />

</RelativeLayout>