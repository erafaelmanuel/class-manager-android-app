<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a_class_f_add_schedule_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTweeterBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/a_class_f_add_schedule_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="No schedule"
            android:textColor="@color/colorWhite"
            android:layout_gravity="left|center"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/a_class_f_add_schedule_card_remove"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_cancel"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:clickable="true"/>
    </FrameLayout>

</android.support.v7.widget.CardView>